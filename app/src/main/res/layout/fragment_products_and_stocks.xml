<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stock.fragment.ProductsAndStocksFragment">

    <Button
        android:id="@+id/fragment_products_and_stocks_add_new_products_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#017a84"
        android:padding="8dp"
        android:text="@string/add_new_products"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <Button
        android:id="@+id/fragment_products_and_stocks_update_stocks_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#017a84"
        android:padding="8dp"
        android:text="@string/update_stocks_and_prices"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/fragment_products_and_stocks_add_new_products_btn"
        app:layout_constraintStart_toStartOf="@+id/fragment_products_and_stocks_add_new_products_btn"
        app:layout_constraintTop_toBottomOf="@+id/fragment_products_and_stocks_add_new_products_btn" />

</android.support.constraint.ConstraintLayout>