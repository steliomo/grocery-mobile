<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/alert_dialog_view"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#CFD8DC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/alert_dialog_imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/alert_dialog_view"
        app:layout_constraintEnd_toEndOf="@+id/alert_dialog_view"
        app:layout_constraintStart_toStartOf="@+id/alert_dialog_view"
        app:layout_constraintTop_toTopOf="@+id/alert_dialog_view"
        app:srcCompat="@mipmap/ic_success" />

    <TextView
        android:id="@+id/alert_dialog_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert_dialog_view"
        tools:text="A venda foi realizada com sucesso!" />

    <Button
        android:id="@+id/alert_dialog_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#017a84"
        android:text="OK"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/alert_dialog_textview"
        app:layout_constraintStart_toStartOf="@+id/alert_dialog_textview"
        app:layout_constraintTop_toBottomOf="@+id/alert_dialog_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>