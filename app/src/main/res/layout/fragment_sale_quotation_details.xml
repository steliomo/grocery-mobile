<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sale.fragment.SaleQuotationDetailsFragment">

    <View
        android:id="@+id/saleQuotationDatailsView"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#ccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/salePymentDetailsImageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:src="@mipmap/ic_quotation"
        app:layout_constraintBottom_toBottomOf="@+id/saleQuotationDatailsView"
        app:layout_constraintStart_toStartOf="@+id/saleQuotationDatailsView"
        app:layout_constraintTop_toTopOf="@+id/saleQuotationDatailsView" />

    <TextView
        android:id="@+id/saleQuotationDetailsTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:padding="6dp"
        android:text="@string/total_quotation"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/salePymentDetailsImageView"
        app:layout_constraintEnd_toEndOf="@+id/saleQuotationDatailsView"
        app:layout_constraintStart_toStartOf="@+id/saleQuotationDatailsView"
        app:layout_constraintTop_toTopOf="@+id/saleQuotationDatailsView" />

    <TextView
        android:id="@+id/saleQuotationDetailsTotalAmountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@+id/saleQuotationDetailsTotalAmount"
        app:layout_constraintStart_toStartOf="@+id/saleQuotationDetailsTotalAmount"
        app:layout_constraintTop_toBottomOf="@+id/saleQuotationDetailsTotalAmount"
        tools:text="1.000,00 MT" />

    <TextView
        android:id="@+id/saleQuotationDetailsCustomer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#017a84"
        android:padding="10dp"
        android:text="@string/customer"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/saleQuotationDatailsView"
        app:layout_constraintStart_toStartOf="@+id/saleQuotationDatailsView"
        app:layout_constraintTop_toBottomOf="@+id/saleQuotationDatailsView" />

    <TextView
        android:id="@+id/saleQuotationDetailsCustomerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_borders"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/saleQuotationDetailsCustomer"
        app:layout_constraintStart_toStartOf="@+id/saleQuotationDetailsCustomer"
        app:layout_constraintTop_toBottomOf="@+id/saleQuotationDetailsCustomer"
        tools:text="StÃ©lio Moiane" />

    <Button
        android:id="@+id/saleQuotationDetailsEmitBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#017a84"
        android:padding="8dp"
        android:text="@string/emit"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/saleQuotationDetailsCustomerName"
        app:layout_constraintStart_toStartOf="@+id/saleQuotationDetailsCustomerName"
        app:layout_constraintTop_toBottomOf="@+id/saleQuotationDetailsCustomerName" />

</androidx.constraintlayout.widget.ConstraintLayout>