<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sale_report_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sale_report_profit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="28-09-2019" />

    <TextView
        android:id="@+id/sale_report_profit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:padding="4dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/sale_report_date"
        app:layout_constraintEnd_toStartOf="@+id/sale_report_sale"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sale_report_date"
        app:layout_constraintTop_toTopOf="@+id/sale_report_date"
        tools:text="13.208,00 MT" />

    <TextView
        android:id="@+id/sale_report_sale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:padding="4dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/sale_report_profit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sale_report_profit"
        app:layout_constraintTop_toTopOf="@+id/sale_report_profit"
        tools:text="13.208,00 MT" />

</android.support.constraint.ConstraintLayout>