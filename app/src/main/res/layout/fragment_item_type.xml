<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/fragment_item_type_products_view"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:background="#fff"
        android:elevation="6dp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_item_type_services_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_item_type_products_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#CFD8DC"
        android:elevation="6dp"
        android:padding="4dp"
        android:text="@string/products"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@+id/fragment_item_type_products_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_item_type_products_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_item_type_products_view" />

    <ImageView
        android:id="@+id/fragment_item_type_products_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_item_type_products_view"
        app:layout_constraintEnd_toEndOf="@+id/fragment_item_type_products_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_item_type_products_view"
        app:layout_constraintTop_toTopOf="@+id/fragment_item_type_products_view"
        app:srcCompat="@mipmap/ic_products" />

    <View
        android:id="@+id/fragment_item_type_services_view"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        android:background="#fff"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_item_type_products_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_item_type_products_view"
        app:layout_constraintTop_toTopOf="@+id/fragment_item_type_products_view" />

    <TextView
        android:id="@+id/fragment_item_type_services_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#CFD8DC"
        android:elevation="6dp"
        android:padding="4dp"
        android:text="@string/services"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@+id/fragment_item_type_services_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_item_type_services_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_item_type_services_view" />

    <ImageView
        android:id="@+id/fragment_item_type_services_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_item_type_services_textview"
        app:layout_constraintEnd_toEndOf="@+id/fragment_item_type_services_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_item_type_services_view"
        app:layout_constraintTop_toTopOf="@+id/fragment_item_type_services_view"
        app:srcCompat="@mipmap/ic_services" />

</android.support.constraint.ConstraintLayout>