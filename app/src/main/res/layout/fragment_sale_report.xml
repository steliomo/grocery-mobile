<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_sale_report_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="#CFD8DC"
        android:padding="6dp"
        android:text="@string/date"
        android:textColor="#000"
        app:layout_constraintEnd_toStartOf="@+id/fragment_sale_report_billing"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_sale_report_billing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        android:background="#CFD8DC"
        android:padding="6dp"
        android:text="@string/billing"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_sale_report_date"
        app:layout_constraintEnd_toStartOf="@+id/fragment_sale_report_sale"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_sale_report_date"
        app:layout_constraintTop_toTopOf="@+id/fragment_sale_report_date" />

    <TextView
        android:id="@+id/fragment_sale_report_sale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#CFD8DC"
        android:padding="6dp"
        android:text="@string/sale_value"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_sale_report_billing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_sale_report_billing"
        app:layout_constraintTop_toTopOf="@+id/fragment_sale_report_billing" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_sale_report_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/fragment_sale_report_total"
        app:layout_constraintEnd_toEndOf="@+id/fragment_sale_report_sale"
        app:layout_constraintStart_toStartOf="@+id/fragment_sale_report_date"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sale_report_billing"
        tools:listitem="@layout/sale_report" />

    <TextView
        android:id="@+id/fragment_sale_report_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp"
        android:background="#CFD8DC"
        android:padding="6dp"
        android:text="Total"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_sale_report_expenses_label"
        app:layout_constraintEnd_toStartOf="@+id/fragment_sale_report_total_billing"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/fragment_sale_report_recycler_view" />

    <TextView
        android:id="@+id/fragment_sale_report_total_billing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="#CFD8DC"
        android:padding="6dp"
        android:textAlignment="textEnd"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_sale_report_total"
        app:layout_constraintEnd_toStartOf="@+id/fragment_sale_report_total_sale"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_sale_report_total"
        app:layout_constraintTop_toTopOf="@+id/fragment_sale_report_total"
        tools:text="13.208,00 MT" />

    <TextView
        android:id="@+id/fragment_sale_report_total_sale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:background="#CFD8DC"
        android:padding="6dp"
        android:textAlignment="textEnd"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_sale_report_total_billing"
        app:layout_constraintEnd_toEndOf="@+id/fragment_sale_report_recycler_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_sale_report_total_billing"
        app:layout_constraintTop_toTopOf="@+id/fragment_sale_report_total_billing"
        tools:text="13.208,00 MT" />

    <TextView
        android:id="@+id/fragment_sale_report_expenses_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp"
        android:background="#CFD8DC"
        android:padding="6dp"
        android:text="@string/expenses"
        android:textAlignment="textStart"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_sale_report_profit_label"
        app:layout_constraintEnd_toStartOf="@+id/fragment_sale_report_expenses"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="@+id/fragment_sale_report_total" />

    <TextView
        android:id="@+id/fragment_sale_report_expenses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:background="#CFD8DC"
        android:padding="6dp"
        android:textAlignment="textEnd"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_sale_report_expenses_label"
        app:layout_constraintEnd_toEndOf="@+id/fragment_sale_report_total_sale"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/fragment_sale_report_expenses_label"
        app:layout_constraintTop_toTopOf="@+id/fragment_sale_report_expenses_label"
        tools:text="10.000,00 MT" />

    <TextView
        android:id="@+id/fragment_sale_report_profit_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        android:background="#CFD8DC"
        android:padding="6dp"
        android:text="@string/profit"
        android:textAlignment="textStart"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragment_sale_report_profit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="@+id/fragment_sale_report_expenses_label" />

    <TextView
        android:id="@+id/fragment_sale_report_profit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:background="#CFD8DC"
        android:padding="6dp"
        android:textAlignment="textEnd"
        android:textColor="#00796B"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_sale_report_profit_label"
        app:layout_constraintEnd_toEndOf="@+id/fragment_sale_report_expenses"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/fragment_sale_report_profit_label"
        app:layout_constraintTop_toTopOf="@+id/fragment_sale_report_profit_label"
        tools:text="3.000,00 MT" />

</androidx.constraintlayout.widget.ConstraintLayout>