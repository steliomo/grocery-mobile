<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/inventory_item_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_product" />

    <TextView
        android:id="@+id/inventory_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/inventory_item_icon"
        app:layout_constraintEnd_toStartOf="@+id/inventory_item_quantity_label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toEndOf="@+id/inventory_item_icon"
        app:layout_constraintTop_toTopOf="@+id/inventory_item_icon"
        tools:text="Sumo Ceres 2L" />

    <TextView
        android:id="@+id/inventory_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/inventory_item_quantity_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/inventory_item_quantity_label"
        app:layout_constraintTop_toTopOf="@+id/inventory_item_quantity_label"
        app:layout_constraintVertical_bias="0.0"
        tools:text="1120.00" />

    <TextView
        android:id="@+id/inventory_item_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Quantidade:"
        app:layout_constraintBottom_toBottomOf="@+id/inventory_item_name"
        app:layout_constraintEnd_toStartOf="@+id/inventory_item_quantity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/inventory_item_name"
        app:layout_constraintTop_toTopOf="@+id/inventory_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>