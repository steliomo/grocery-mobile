<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.fragment.PaymentFragment">

    <View
        android:id="@+id/fragment_payment_view"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#ccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_payment_manager_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="5px"
        android:text="@string/account_manager"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fragment_payment_view"
        app:layout_constraintTop_toTopOf="@+id/fragment_payment_view" />

    <TextView
        android:id="@+id/fragment_payment_manager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:padding="5px"
        android:text=""
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_payment_manager_name_label"
        app:layout_constraintStart_toEndOf="@+id/fragment_payment_manager_name_label"
        app:layout_constraintTop_toTopOf="@+id/fragment_payment_manager_name_label"
        app:layout_constraintVertical_bias="0.0"
        tools:text="StÃ©lio Moiane" />

    <TextView
        android:id="@+id/fragment_payment_number_of_users_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5px"
        android:text="@string/number_of_users"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fragment_payment_manager_name_label"
        app:layout_constraintTop_toBottomOf="@+id/fragment_payment_manager_name_label" />

    <TextView
        android:id="@+id/fragment_payment_number_of_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5px"
        android:text=""
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/fragment_payment_manager_name"
        app:layout_constraintTop_toBottomOf="@+id/fragment_payment_manager_name"
        tools:text="10" />

    <TextView
        android:id="@+id/fragment_payment_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5px"
        android:text="Saldo:"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_payment_balance"
        app:layout_constraintEnd_toStartOf="@+id/fragment_payment_balance"
        app:layout_constraintTop_toTopOf="@+id/fragment_payment_balance" />

    <TextView
        android:id="@+id/fragment_payment_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="5px"
        android:text=""
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_payment_view"
        app:layout_constraintEnd_toEndOf="@+id/fragment_payment_view"
        tools:text="5.000,00 MT" />

    <TextView
        android:id="@+id/fragment_payment_forms_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="5px"
        android:text="@string/payment_methods"
        android:textColor="#000"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/fragment_payment_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_payment_view" />

    <View
        android:id="@+id/fragment_payment_mpesa_view"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border"
        android:elevation="2px"
        app:layout_constraintStart_toStartOf="@+id/fragment_payment_forms_label"
        app:layout_constraintTop_toBottomOf="@+id/fragment_payment_forms_label" />

    <TextView
        android:id="@+id/fragment_payment_mpesa_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:elevation="2px"
        android:padding="5px"
        android:text="M-pesa"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/fragment_payment_mpesa_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_payment_mpesa_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_payment_mpesa_view" />

    <ImageView
        android:id="@+id/fragment_payment_mpesa_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/ic_mpesa"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_payment_mpesa_view"
        app:layout_constraintEnd_toEndOf="@+id/fragment_payment_mpesa_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_payment_mpesa_view"
        app:layout_constraintTop_toTopOf="@+id/fragment_payment_mpesa_view" />

</androidx.constraintlayout.widget.ConstraintLayout>