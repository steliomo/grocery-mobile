<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/stockAnalysisOrder"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stockAnalysisName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/stockAnalysisName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:padding="5dp"
        android:text="AÃ§ucar Branco Autopack 1KG"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/stockAnalysisOrder"
        app:layout_constraintEnd_toStartOf="@+id/stockAnalysisDiscrepancy"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/stockAnalysisOrder"
        app:layout_constraintTop_toTopOf="@+id/stockAnalysisOrder" />

    <TextView
        android:id="@+id/stockAnalysisDiscrepancy"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#D50000"
        app:layout_constraintBottom_toBottomOf="@+id/stockAnalysisName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/stockAnalysisName"
        app:layout_constraintTop_toTopOf="@+id/stockAnalysisName"
        tools:text="5" />

</androidx.constraintlayout.widget.ConstraintLayout>