<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/guideItemView"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/textview_borders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guideItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#017a84"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/guideItemView"
        app:layout_constraintStart_toStartOf="@+id/guideItemView"
        app:layout_constraintTop_toTopOf="@+id/guideItemView"
        tools:text="Prumo de cofragem mÃ©dia" />

    <TextView
        android:id="@+id/guideItemQuantityLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="Quantidade"
        app:layout_constraintEnd_toStartOf="@+id/guideItemQuantity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/guideItemName"
        app:layout_constraintTop_toBottomOf="@+id/guideItemName" />

    <TextView
        android:id="@+id/guideItemQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/guideItemQuantityLabel"
        app:layout_constraintEnd_toEndOf="@+id/guideItemName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guideItemQuantityLabel"
        app:layout_constraintTop_toTopOf="@+id/guideItemQuantityLabel"
        tools:text="100" />

</androidx.constraintlayout.widget.ConstraintLayout>