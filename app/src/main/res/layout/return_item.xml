<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/returnItemProductIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_product" />

    <TextView
        android:id="@+id/returnItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:padding="3dp"
        android:text=""
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/returnItemProductIcon"
        app:layout_constraintTop_toTopOf="@+id/returnItemProductIcon"
        tools:text="Prumos MÃ©dios 0.00G" />

    <TextView
        android:id="@+id/returnItemRentsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Alugados:"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/returnItemReturnedLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/returnItemProductIcon"
        app:layout_constraintStart_toStartOf="@+id/returnItemName"
        app:layout_constraintTop_toBottomOf="@+id/returnItemName" />

    <TextView
        android:id="@+id/returnItemRents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text=""
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/returnItemRentsLabel"
        app:layout_constraintStart_toEndOf="@+id/returnItemRentsLabel"
        app:layout_constraintTop_toTopOf="@+id/returnItemRentsLabel"
        tools:text="100" />

    <TextView
        android:id="@+id/returnItemReturned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text=""
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@+id/returnItemName"
        app:layout_constraintTop_toBottomOf="@+id/returnItemName"
        tools:text="100" />

    <TextView
        android:id="@+id/returnItemReturnedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Devolvidos:"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/returnItemReturned"
        app:layout_constraintEnd_toStartOf="@+id/returnItemReturned"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/returnItemRentsLabel"
        app:layout_constraintTop_toTopOf="@+id/returnItemReturned" />

    <ImageView
        android:id="@+id/returnItemSelectedImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/select_view"
        android:elevation="4dp"
        android:src="@drawable/ic_selected"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/returnItemProductIcon"
        app:layout_constraintEnd_toEndOf="@+id/returnItemName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/returnItemProductIcon"
        app:layout_constraintTop_toTopOf="@+id/returnItemProductIcon"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>