<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/fragment_period_selection_view"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#D7CCC8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragment_period_selection_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_report"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_period_selection_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_period_selection_view"
        app:layout_constraintTop_toTopOf="@+id/fragment_period_selection_view" />

    <TextView
        android:id="@+id/fragment_sale_report_textView"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="6dp"
        android:text="Vendas por período"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_period_selection_imageView"
        app:layout_constraintEnd_toEndOf="@+id/fragment_period_selection_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_period_selection_view"
        app:layout_constraintTop_toTopOf="@+id/fragment_period_selection_imageView" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_period_selection_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_period_selection_view">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_calendar"
            android:hint="Data Início"
            android:inputType="date" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_period_selection_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_period_selection_start_date"
        app:layout_constraintStart_toStartOf="@+id/fragment_period_selection_start_date"
        app:layout_constraintTop_toBottomOf="@+id/fragment_period_selection_start_date">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_calendar"
            android:hint="Data Fim"
            android:inputType="date" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/fragment_period_selection_submit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#017a84"
        android:text="Submebter"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/fragment_period_selection_end_date"
        app:layout_constraintStart_toStartOf="@+id/fragment_period_selection_end_date"
        app:layout_constraintTop_toBottomOf="@+id/fragment_period_selection_end_date" />

</android.support.constraint.ConstraintLayout>